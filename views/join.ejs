<!--Code by 정지형-->
<html>
<head>
    <title>미로아펫</title>
    <!--부트스트랩 css-->
    <link href="/bootstrap/css/bootstrap.css" rel="stylesheet">
    <!--login_join css-->
    <link rel='stylesheet' href='/stylesheets/login_join.css' />
    <!--제이쿼리 비밀번호 확인 기능-->
    <script type="text/javascript">
        $(function(){
            $("#alert-success").hide();//비밀번호 일치합니다. div 숨김.
            $("#alert-danger").hide();//비밀번호가 일치하지 않습니다. div 숨김.
            $("input").keyup(function(){ 
                var password=$("#password").val();//id가 password인 값을 변수 password에 저장.
                var check=$("#check").val();//id가 check 값을 변수 check 저장.
                if(password != "" || check != ""){ //password와 check값이 공백이 아닌 경우
                    if(password == check){// 비밀번호값(password와)과 비밀번호 재입력(check) 값이 같다면 
                        $("#alert-success").show()//비밀번호 일치합니다. div 다시 보여줌.
                        $("#alert-danger").hide();//비밀번호가 일치하지 않습니다. div 숨김.
                        $("#submit").removeAttr("disabled");//submit 버튼 숨김 속성 제거 . 
                    }else{//다르다면
                        $("#alert-success").hide();//비밀번호 일치합니다. div 숨김.
                        $("#alert-danger").show();//비밀번호가 일치하지 않습니다. div 다시 보여줌.
                        $("#submit").attr("disabled", "disabled");//비밀번호 다르므로 가입못하게 submit 버튼 숨김 .
                    }
                } 
            });
        }); 
    </script>
</head>

<body class="text-center">
    <!--회원가입 폼. Sign up 버튼을 누르면 post방식으로 /users/join 이동-->
    <form class="form-signin" action="/users/join" method="post">
        <img class="mb-4" src="/images/logo.png" alt="" width="122">
        <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
        <input type="text" id="id" name="id" class="form-control" placeholder="ID" required="" autofocus=""><!--전달되는 값 : id-->
        <input type="password" id="password"name="password" class="form-control" placeholder="Password" required=""><!--전달되는 값 : password-->
        <input type="password" id="check" name="reuserPwd" id="check" class="form-control" placeholder="Confirm Password" required="" />
        <div class="alert alert-success" id="alert-success">비밀번호가 일치합니다.</div>
        <div class="alert alert-danger" id="alert-danger">비밀번호가 일치하지 않습니다.</div>
        <input type="text" id="name" name="name" class="form-control" placeholder="Name" required=""><!--전달되는 값 : name-->
        <input type="text" id="phone" name="phone" class="form-control" placeholder="Phone Number" required=""><!--전달되는 값 : phone-->
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button><!--submit 버튼-->
        <p class="mt-5 mb-3 text-muted">© copy right - MiroaPet</p>      
    </form>
   
    <!--부트스트랩 js-->
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
   <script type="text/javascript" src="/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>